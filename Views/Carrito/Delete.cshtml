@model CteTarea8MVC.Models.ItemCarrito


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar Articulo</title>
</head>
<body>
 @if (String.IsNullOrEmpty(TempData["TextData"].ToString())) {
    
    <div class="container">
            <div class="modal show" id="myModal" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-body">
                            <form asp-action="Delete">
                                <div class="row">
                                    <h3>¿Confirme esta seguro de eliminar?</h3>
                                </div>
                                <div class="row">
                                    <div class="col-sm-5">
                                    </div>
                                    <div class="col-sm-2">
                                        <input type="submit" value="Si" class="btn btn-danger" />
                                    </div>
                                    <div class="col-sm-5">
                                        <a asp-action="Index" class="btn btn-outline-secondary">No</a>
                                    </div>
                                </div>



                            </form>
                        </div>
                    </div>
                    
                </div>
            </div>
    
        
    </div>

 }
else {
    <div class="alert alert-danger" role="alert">

        @Html.Raw(TempData["TextData"])
    </div>
}

<div>
    <h4>Articulo  </h4>
    <hr />
         
        <div class="form-group ">
            <label asp-for="_IdCarrito" class="control-label"></label>
            
            <input asp-for="_IdCarrito" class="form-control" readonly />
            
        </div>
        <div class="form-group ">
            <label asp-for="_IdCarrito" class="control-label"></label>

            <input asp-for="IdArticulo" class="form-control" readonly />


            <span asp-validation-for="IdArticulo" class="text-danger"></span>
        </div>
        <div class="form-group ">
            <label asp-for="Descripcion" class="control-label"></label>

            <input asp-for="Descripcion" class="form-control" readonly />

        </div>
        <div class="form-group ">
            <label asp-for="Cantidad" class="control-label"></label>

            <input asp-for="Cantidad" class="form-control" readonly />


          
        </div>
        <div class="form-group ">
            <label asp-for="Precio" class="control-label"></label>

            <input asp-for="Precio" class="form-control" readonly />



        </div>
        <div class="form-group ">
            <label asp-for="SFoto" class="control-label"></label>
            <img src="@Html.DisplayFor(model => model.SFoto)" class="img-fluid img-thumbnail"  />
            



        </div>
        <div class="form-group ">
            <label asp-for="Subtotal" class="control-label"></label>
            <input asp-for="Subtotal" class="form-control" readonly />
            



        </div>

    
   
</div>
</body>
</html>
