@model CteTarea8MVC.Models.Articulo;
@using (Html.BeginForm("Create", "Articulo", FormMethod.Post, new { enctype = "multipart/form-data" }))

{
    
<div class="row">
<div class="col-8 ">
            <h4>Articulo</h4>
 </div>
        <div class="col-4 ">
            <a asp-action="Index">Volver al Catálogo</a>
        </div>
</div>


        
<hr />
    @if (TempData["TempData"] != null && ! String.IsNullOrEmpty(TempData["TempData"].ToString()))
    {
        <div class="alert alert-danger" role="alert">
            @Html.Raw(TempData["TempData"])
        </div>
    }

   

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group col-md-6">
                        <label asp-for="Id" class="control-label"></label>
                        <input asp-for="Id" class="form-control" readonly />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                <div class="form-group col-md-6">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <input asp-for="Descripcion" class="form-control" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                        <label asp-for="Cantidad" class="control-label"></label>
                        <input asp-for="Cantidad" class="form-control" required />
                        <span asp-validation-for="Cantidad" class="text-danger"></span>
                    </div>
                <div class="form-group col-md-6">
                    <label asp-for="Precio" class="control-label"></label>
                    <input asp-for="Precio" class="form-control" required />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                        <label asp-for="FotoUrl" class="control-label"></label>
                        <input type="file" name="_File" />
                        <span asp-validation-for="FotoUrl" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                

            
            
            
            
            
            
            
        </form>
    </div>
</div>

<div>
    
</div>
    @section Scripts {
    @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
}